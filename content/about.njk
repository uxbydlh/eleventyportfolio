        <div class="job-info">
            <ul class="tools-list" x-data="toolData">
                <template x-if="!tools">
                    <li>
                        <p>loading...</p>
                    </li>
                </template>
                <template x-for="tool in tools">
                    <li>
                        <div class="tool-icon" >
                            <img :src="'../assets/images/3rd-party-logos/tools/' + tool.icon" loading="lazy" alt="#TODO">
                        </div>
                        <h5 x-text="tool.name"></h5>
                    </li>
                </template>
            </ul>
        </div>
    </div>
    {% for job in cv %}
    <div class="CV">
        <div class="heading">
            <div class="company-role">
                <h3>{{job.company}}</h3>
                <ul class="roles-list">
                    {% for role in job.roles %}
                    <li>{{role}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="location">
                <p>{{job.location}}, {{job.timePeriod}}</p>
                <a class="smallBtn secondary" href="{{job.link}}">Visit<i class="ri-arrow-right-s-fill"></i></a>
            </div>
        </div>
        <div class="job-info">
            <div class="text-div">
                <ul>
                {% for point in job.bulletPoints %}
                    <li>{{point}}</li>
                {% endfor %}
                </ul>
                <div class="btn-row-inline">
                    {% for project in job.projects %}
                    <a class="btn secondary" href="{{project.link}}">{{project.title}}<i class="ri-arrow-right-s-fill"></i></a>
                    {% endfor %}
                </div>
            </div>
            <div class="row-column image job-image">
                <img class="image" src="{{'../assets/images/3rd-party-logos/' + job.logo}}" loading="lazy" alt="logo">
            </div>
        </div>
    </div>
    {% endfor %}
</section>



<section class="centre" id="Policy Section">
    <h1>Policies</h1>
    <ol class="policy-list">
        {% for policy in collections.policies %}
        <li class="policy-card">
            <a href="{{policy.url | toAbsoluteUrl }}" class="policy-card-link">
                <img src='{{policy.data.blob.src}}' alt="">
            </a>
            <div>
                <h3>{{policy.data.title}}</h3>
                <p>{{policy.data.subheading}}</p>
                <a class="btn transparent" href="{{policy.url | toAbsoluteUrl }}">Read More<i class="ri-arrow-right-line"></button>
            </div>
        </li>
        {% endfor %}
        <li class="policy-card">
            <a href="{{'contactus/#FAQ' | toAbsoluteUrl }}" class="policy-card-link">
                <img src='../assets/images/about/Blob-FAQ.webp' alt="">
            </a>
            <div>
                <h3>FAQ</h3>
                <p></p>
                <a class="btn transparent" href="{{'contactus/#FAQ' | toAbsoluteUrl }}">Read More<i class="ri-arrow-right-line"></a>
            </div>
        </li>
    </ol>
</section>

<script>
document.addEventListener('alpine:init', () => {
  Alpine.data('toolData', () => ({
    tools:null,
    async init() {
      let resp = await fetch('../_data/tools.json');
      this.tools = await resp.json();
    },
  }))
});
</script>