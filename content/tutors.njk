					{% for subject in tutor.subjects %}
					<li>{{subject}}</li>
					{% endfor %}
				</ul>
			</li>
		{% endfor %} TEMPORARY REMOVAL -->
		<li class="tutor-card">
				<div class="tutor-photo">
					<img src="../assets/images/tutors/Potential-Volunteer.png" alt="Drawing of a blank, question-marked face representing a potential volunteer - you perhaps?"/>
				</div>
				<p class="tutor-name">{{tutorJob.name}}</p>
				<ul>
					{% for subject in tutorJob.subjects %}
					<li>{{subject}}</li>
					{% endfor %}
				</ul>
				<a class="btn primary" href="{{tutorJob.link}}">Apply Now</a>
		</li>
	</ul>
	<div class="section-row">
		<a class="btn primary" href="{{'/tutors/all-tutors/' | toAbsoluteUrl}}"> View More Tutors </a>
		<a class="btn secondary" href="{{'/tutors/become-a-tutor/' | toAbsoluteUrl}}">Become a Volunteer Tutor</a>
	</div>
</section>